using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class Enemy : MonoBehaviour
{
    public int hp = 30;
    

    // Update is called once per frame
    public void TakeDamage(int amount)
    {
        hp -= amount;
        if (hp <= 0)
        {
             Destroy(gameObject);
        }
    }
}
